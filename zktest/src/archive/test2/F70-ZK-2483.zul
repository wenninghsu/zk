<zk>
	<window apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm')@init('org.zkoss.zktest.test2.F70_ZK_2483_VM')"
		validationMessages="@id('vmsgs')">
		<label multiline="true">
			Should display value and key in each entry of the map correctly
		</label>
		<vlayout id="init" children="@load(vm.entries)">
	        <template name="children" var="node">
	            <textbox value="@bind(node.key)" style="padding-left:10px"/>
	            <textbox value="@bind(node.value)" style="padding-left:10px"/>
	        </template>
	    </vlayout>
		<button onClick="init.invalidate()"/>
	</window>
</zk>